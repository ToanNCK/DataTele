@model Inspinia_MVC5.Models.TeleInfo
@if (Model != null)
{
    using (Html.BeginForm("Edit", "Tele", FormMethod.Post, new { @id = "frmSua" }))
    {
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title text-uppercase">Sửa thông tin telegram</h4>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label>Số điện thoại</label>
                <input type="text" name="SDT" value="@Model.SDT.Trim()" class="form-control" required readonly>
            </div>
            <div class="form-group">
                <label>Phiên bản blue stacks</label>
                <input type="text" name="VERSION_BLUE_STACKS" value="@Model.VERSION_BLUE_STACKS.Trim()" class="form-control" required>
            </div>
            <div class="form-group">
                <label>Api Telegram</label>
                <textarea name="API_TELE" id="" cols="30" rows="7" style="height: 125px" class="form-control">@Html.Raw(Model.API_TELE != null ? @Model.API_TELE.Trim() : "")</textarea>
            </div>
            <div class="form-group">
                <label>Ghi chú</label>
                <textarea name="GHI_CHU" id="" cols="30" rows="7" style="height: 50px" class="form-control">@Html.Raw(Model.GHI_CHU != null ? @Model.GHI_CHU.Trim() : "")</textarea>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-white pull-right" data-dismiss="modal">Đóng</button>
            <button class="btn btn-primary pull-right mr-5" type="submit">Lưu</button>
        </div>
        @Html.HiddenFor(m => m.ID)
        @Html.HiddenFor(m => m.NGAY_TAO)
    }
}
