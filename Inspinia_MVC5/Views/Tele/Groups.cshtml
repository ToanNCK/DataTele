@model List<Inspinia_MVC5.Models.TeleGroupInfo>
@{
    ViewBag.Title = "Danh sách groups telegram";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Telegram</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Tele")">Tranh chủ</a>
            </li>
            <li>
                <a>Telegram</a>
            </li>
            <li class="active">
                <strong>Danh sách groups telegram</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Danh sách groups telegram</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Config option 1</a>
                            </li>
                            <li>
                                <a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-md-12">
                            <a id="isScanGroups" class="btn btn-w-m btn-info pull-right"><i class="fa fa-plus-circle"></i> Scan groups</a>
                        </div>
                    </div>

                    <table class="table table-striped table-bordered table-hover" id="dataTables-groups-tele">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Số điện thoại</th>
                                <th>Group Id</th>
                                <th>Access hash</th>
                                <th>Tên groups</th>
                                <th>Link group</th>
                                <th>Tổng số member</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                var i = 0;
                                foreach (var item in Model)
                                {
                                    i = ++i;
                                    <tr>
                                        <td>@i</td>
                                        <td>
                                            @item.SDT
                                        </td>
                                        <td>
                                            @item.GROUP_ID
                                        </td>
                                        <td>
                                            @item.ACCESS_HASH
                                        </td>
                                        <td>@item.TITLE</td>
                                        <td>@Html.Raw(string.IsNullOrEmpty(item.USERNAME) && !item.USERNAME.Trim().ToLower().Contains("none") ? "" : "<a href='t.me/" + item.USERNAME + "'>" + item.USERNAME + "</a>")</td>
                                        <td>@item.PARTICIPANTS_COUNT</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr class="gradeX">
                                    <td colspan="6">Không có dữ liệu</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>STT</th>
                                <th>Số điện thoại</th>
                                <th>Group Id</th>
                                <th>Access hash</th>
                                <th>Tên groups</th>
                                <th>Link group</th>
                                <th>Tổng số member</th>
                            </tr>
                        </tfoot>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/Content/plugins/iCheck/iCheckStyles")
    @Styles.Render("~/plugins/touchSpinStyles")
    @Styles.Render("~/plugins/jasnyBootstrapStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/jasnyBootstrap")
    @Scripts.Render("~/plugins/iCheck")
    @Scripts.Render("~/plugins/touchSpin")
    <script type="text/javascript">

        $('#isScanGroups').on('click',
            function() {
                $.ajax({
                    type: "GET",
                    url: "@Url.Action("ScanGroups", "Tele")",
                    success: function(data) {
                        confirm(data);
                    }
                });
            });


        $(document).ready(function() {
            $('#dataTables-groups-tele').DataTable({
                pageLength: 25,
                dom: '<"html5buttons"B>lTfgitp',
                'language': {
                    'url': '../../Scripts/plugins/dataTables/Vietnamese.json'
                },
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'ExampleFile' },
                    { extend: 'pdf', title: 'ExampleFile' },
                    {
                        extend: 'print',
                        customize: function(win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ]

            });
        });

    </script>
}